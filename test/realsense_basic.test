<launch>
  <!-- Start camera plugin in Gazebo server -->
  <node name="gazebo"
        pkg="gazebo_ros"
        type="gzserver"
        respawn="false"
        output="screen"
        args="-r --verbose -e ode $(find realsense_gazebo_plugin)/worlds/realsense.world" />

  <!-- Start test -->
  <test pkg="realsense_gazebo_plugin"
        type="realsense_plugin_test"
        test-name="realsense_plugin_test"/>
</launch>
